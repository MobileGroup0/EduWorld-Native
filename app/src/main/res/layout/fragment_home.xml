<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/scheduledHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scheduled Meetings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark" />

        <fragment
            android:id="@+id/booking0"
            android:name="group0.eduworld.BookingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:state="upcoming"
            tools:layout="@layout/fragment_booking" />

        <TextView
            android:id="@+id/receivedHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Received Bookings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark" />

        <fragment
            android:id="@+id/booking1"
            android:name="group0.eduworld.BookingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:state="pending"
            tools:layout="@layout/fragment_booking" />

        <TextView
            android:id="@+id/cancelledHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelled Meetings"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimaryDark" />

        <fragment
            android:id="@+id/booking2"
            android:name="group0.eduworld.BookingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:state="cancelled"
            tools:layout="@layout/fragment_booking" />

    </LinearLayout>
</FrameLayout>